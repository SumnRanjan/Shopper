<%
const user = locals.user;
%>
<nav class="flex justify-evenly items-center p-4 w-full h-[10vh] bg-white text-[20px]">
  <div class="flex items-center gap-3">
    <a class="cursor-pointer" href="/">
      <img src="/images/logo.png" alt="Logo" class="w-50 h-50" />
    </a>
    <h1 class="text-4xl font-semibold mt-1">
      <a href="/">SHOPPER</a>
    </h1>
  </div>

  <ul class="hidden md:flex gap-8 text-teal-800">
    <li><a class="hover:border-b-2 border-teal-400" href="/">Shop</a></li>
    <li><a class="hover:border-b-2 border-teal-400" href="/men">Men</a></li>
    <li><a class="hover:border-b-2 border-teal-400" href="/women">Women</a></li>
    <li><a class="hover:border-b-2 border-teal-400" href="/kids">Kids</a></li>
  </ul>

  <div class="hidden md:flex gap-5">
    <% if (!user) { %>
      <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700">
        <a href="/login">Login</a>
      </button>
      <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700">
        <a href="/signup">SignUp</a>
      </button>
    <% } else { %>
      <div class="flex items-center gap-4">
        <span class="text-teal-700">Hi, <%= user.name %></span>
        <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700">
          <a href="/logout">Logout</a>
        </button>
      </div>
    <% } %>
  </div>

  <a href="/cart" class="hidden md:flex">
    <img src="/images/cart_icon.png" alt="Cart" class="w-6 h-6" />
  </a>

  <!-- Mobile menu remains the same, but update login/signup sections similarly -->
  <div id="mobile-menu" class="absolute top-16 left-0 w-full bg-white flex-col items-center gap-4 p-4 hidden md:hidden">
    <ul class="flex flex-col gap-4 text-teal-800">
      <li><a class="hover:border-b-2 border-teal-400" href="/">Shop</a></li>
      <li><a class="hover:border-b-2 border-teal-400" href="/men">Men</a></li>
      <li><a class="hover:border-b-2 border-teal-400" href="/women">Women</a></li>
      <li><a class="hover:border-b-2 border-teal-400" href="/kids">Kids</a></li>
    </ul>
    <div class="flex flex-col gap-4 mt-6">
      <% if (!user) { %>
        <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700 w-[40vw]">
          <a href="/login">Login</a>
        </button>
        <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700 w-[40vw]">
          <a href="/signup">SignUp</a>
        </button>
      <% } else { %>
        <div class="flex flex-col items-center gap-4">
          <span class="text-teal-700">Hi, <%= user.name %></span>
          <button class="px-4 py-2 rounded-full border-2 border-teal-200 font-semibold text-teal-700 w-[40vw]">
            <a href="/logout">Logout</a>
          </button>
        </div>
      <% } %>
      <a href="/cart">
        <img src="/images/cart_icon.png" alt="Cart" class="w-6 h-6" />
      </a>
    </div>
  </div>
</nav>

